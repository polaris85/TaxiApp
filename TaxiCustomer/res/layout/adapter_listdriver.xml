<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.libreteam.taxi"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="@anim/roundcorner"
	    android:layout_marginTop="2dp"
	    android:layout_marginBottom="5dp"
	    android:layout_marginLeft="3dp"
	    android:layout_marginRight="3dp"
	    android:weightSum="3">
   		<LinearLayout 
		    android:id="@+id/top"
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:orientation="horizontal"
		    android:layout_weight="2">
    		<LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:layout_marginTop="10dip"
			    android:layout_marginLeft="5dip"
			    android:background="@anim/roundcorner_y"
			    android:layout_weight="1">
    		<ImageView
		        android:id="@+id/icon"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:padding="1dip"
		        android:scaleType="fitXY"/>
 	</LinearLayout>  
 
 	<LinearLayout
	    android:layout_width="0dip"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:background="@anim/roundcorner"
	    android:layout_weight="1.5"
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="0dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"  >

		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:layout_weight="2.70"
		    android:orientation="horizontal" >

 			<TextView
		        android:id="@+id/rate_h"  
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="@android:color/darker_gray"
		        android:text="@string/rating_upper_case"
		        android:textSize="@dimen/history_bottom"
		        android:layout_marginRight="5dip"/>
  			<TextView 
		        android:id="@+id/rating"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textSize="@dimen/list_detail"
		        android:layout_marginRight="5dip"
		        android:textColor="@android:color/white"/>
   			<TextView 
		        android:id="@+id/top1"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="#D7AA24"
		        android:textSize="@dimen/list_detail"
		        android:visibility="gone"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:orientation="horizontal"
			android:layout_weight="2.5">
   			
		    <ImageView
            android:id="@+id/ivRankStar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_acivite" />
		    <ImageView
            android:id="@+id/ivRankStar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_acivite" />
		    <ImageView
            android:id="@+id/ivRankStar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_acivite" />

		    <ImageView
		        android:id="@+id/ivRankStar4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/star_acivite" />

		    <ImageView
            android:id="@+id/ivRankStar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_acivite" />

<!--         	<RatingBar
        	    android:id="@+id/barStar"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:isIndicator="true"
        	    android:numStars="5"
        	    android:progressDrawable="@drawable/custom_rating_bar"
        	    android:rating="5"
        	    android:stepSize="0.1" /> -->

<!--             <RatingBar
                android:id="@+id/barStar"
                style="@style/CustomRatingBar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.1" /> -->

	 	</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:orientation="horizontal"
			android:layout_weight="3"
			android:background="@anim/roundcorner"
			android:gravity="bottom">
   			<TextView 
		        android:id="@+id/response_h"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textSize="@dimen/history_bottom"
		        android:text="@string/response_upper_case"
		        android:layout_marginRight="5dip"
		        android:textColor="@android:color/darker_gray"/>
  			<TextView 
		        android:id="@+id/response"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="@android:color/white"
		        android:textSize="@dimen/list_detail"
		        android:layout_marginRight="5dip"/>
   			<TextView 
		        android:id="@+id/top2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="#D7AA24"
		        android:textSize="@dimen/list_detail"
		        android:visibility="gone"/>
		</LinearLayout>
		<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="0dip"
			android:orientation="horizontal"
			android:layout_weight="2">
		    <com.libreteam.taxi.extra.ProgressBarView
		       	android:id="@+id/bar3"
		        custom:bar_initial_value="0"
		        custom:bar_num_divisions="100"
		        custom:bar_spacing="0dp"
		    	custom:bar_orientation="0"
		       	custom:bar_color1="@color/bar_green"
		       	custom:bar_color2="@color/bar_off"
		       	android:background="@color/background_black"
		      	android:layout_width="0dip"
		       	android:layout_height="fill_parent"
		        android:layout_weight="8"
		       	android:layout_marginTop="5dip"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		    	android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:background="@anim/roundcorner"
			    android:layout_weight=".5"
			    android:layout_marginTop="10dp"
			    android:layout_marginBottom="0dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp" >
				<TextView
			        android:id="@+id/starnum"
			        android:layout_width="fill_parent"
			        android:layout_height="0dip"
			        android:gravity="bottom|center_horizontal"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:textSize="@dimen/list_detail_rate"
			        android:layout_weight="5"
			        android:textColor="@android:color/white"
			        android:background="@anim/roundcorner"/>
		       	<TextView
			        android:id="@+id/responsenum"
			        android:layout_width="fill_parent"
			        android:layout_height="0dip"
			        android:gravity="bottom|center_horizontal"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:textSize="@dimen/list_detail_rate"
			        android:layout_weight="5"
			        android:textColor="@android:color/white"
			        android:background="@anim/roundcorner" /> 
			</LinearLayout>
		 	<LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:background="@anim/roundcorner_y"
			    android:layout_marginTop="10dip"
			    android:layout_marginRight="5dip"
			    android:layout_weight="1.2"
			    android:gravity="center"
			    android:weightSum="5">
		  		<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="2">
		      		<TextView
				        android:id="@+id/time"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="@android:color/black"
				        android:textStyle="bold"
				        android:textSize="@dimen/list_detail_time"
				        android:layout_margin="0dip"
				        android:gravity="center"/>
		     	</LinearLayout>
		  		<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="0dp"
				    android:orientation="vertical"
				    android:layout_margin="3dip"
				    android:background="@anim/roundcorner"
				    android:gravity="center"
				    android:layout_weight="3">    
		      		<TextView
				        android:id="@+id/esti"  
				        android:layout_width="match_parent"
				        android:layout_height="0dip"
				        android:gravity="center"
				        android:singleLine="true"
				        android:ellipsize="marquee"
				        android:textColor="@android:color/darker_gray"
				        android:textSize="@dimen/history_bottom"
				        android:text="@string/estimated_upper_case"
				        android:layout_weight="1"
				        android:layout_marginTop="1dip" />
					<TextView
				        android:id="@+id/price"
				        android:layout_width="match_parent"
				        android:layout_height="0dip"
				        android:gravity="center"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="@android:color/white"
				        android:textSize="@dimen/list_detail_price"
				        android:textStyle="bold"
				        android:paddingBottom="0dip"
				        android:layout_weight="2"/>
    			</LinearLayout>
     		</LinearLayout>
   		</LinearLayout>
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:orientation="horizontal"
		    android:paddingTop="10dip"
		    android:paddingBottom="5dip"
		    android:id="@+id/detail"
		    android:layout_weight="1"
		    android:background="@anim/roundcorner">

			<RelativeLayout
			    android:layout_width="0dip"
			    android:layout_height="match_parent"
			    android:layout_weight="1" >

			    <TextView
			        android:id="@+id/driver"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_marginLeft="5dip"
			        android:ellipsize="end"
			        android:gravity="left|center_vertical"
			        android:lines="1"
			        android:singleLine="true"
			        android:text="an"
			        android:textColor="@android:color/white"
			        android:textSize="@dimen/list_detail_bottom" />

		    </RelativeLayout>
		 	<LinearLayout
		    	android:layout_width="0dip"
		    	android:layout_height="fill_parent"
		    	android:layout_weight="2"
		    	android:gravity="center">
		    	<TextView
			        android:id="@+id/vehicle"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:text="sdafsd"
			        android:textColor="@android:color/white"
			        android:textSize="@dimen/list_detail_bottom"/>
			</LinearLayout>
		    <RelativeLayout
		    	android:layout_width="0dip"
		    	android:layout_height="match_parent"
		    	android:layout_gravity="center"
		    	android:layout_weight="1">
		        <ImageView
			        android:id="@+id/heart_icon"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:scaleType="fitXY"
			        android:layout_toLeftOf="@+id/heart"
			        android:src="@drawable/heart"
			        android:layout_margin="2dip"
			        android:layout_centerHorizontal="true" />
			    <TextView
			        android:id="@+id/heart"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:lines="1"
			        android:layout_centerInParent="true"
			        android:textColor="@android:color/white"
			        android:textSize="@dimen/list_detail_bottom"/>

				<TextView
				    android:id="@+id/sub_heart"
				    android:layout_width="wrap_content"
				    android:layout_height="fill_parent"
				    android:layout_centerInParent="true"
				    android:layout_marginLeft="2dip"
				    android:layout_toRightOf="@+id/heart"
				    android:background="@anim/roundcorner"
				    android:ellipsize="end"
				    android:gravity="bottom"
				    android:lines="1"
				    android:singleLine="true"
				    android:text="(8)"
				    android:textColor="@android:color/darker_gray"
				    android:textSize="@dimen/list_detail"
				    android:visibility="gone" />

    		</RelativeLayout>
   		</LinearLayout>
	</LinearLayout>
</LinearLayout>