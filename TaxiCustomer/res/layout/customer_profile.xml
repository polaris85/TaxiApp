<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libreteam.driver.Driver_Profile"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical"
    android:background="#191617">

 	<LinearLayout
 	    android:id="@+id/header"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:background="@color/background_header"
 	    android:orientation="horizontal" >

		<LinearLayout
		    android:id="@+id/logosection"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent" >

			<ImageView
			    android:id="@+id/logo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_vertical"
			    android:background="@drawable/logo_taxi_s"
			    android:paddingBottom="1dp"
			    android:paddingTop="1dp" />

		</LinearLayout>
      	<LinearLayout 
			android:id="@+id/border"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_gravity="center"
			android:background="@android:color/transparent">                                   
            <TextView 
				android:id="@+id/status"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:textSize="@dimen/status"
				android:textColor="#191617"
				android:text="@string/profile"
				android:gravity="center"
				android:layout_gravity="center"
				android:layout_marginRight="4dip"/>
		</LinearLayout>
  		<LinearLayout
  		    android:id="@+id/thirdsection"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_gravity="top"
  		    android:gravity="right" >

  			<ImageView
  			    android:id="@+id/thirdimg"
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_gravity="center_vertical|right"
  			    android:src="@drawable/thirdsection" />

  		</LinearLayout>		
	</LinearLayout>
	<LinearLayout 
		android:orientation="vertical"
     	android:layout_width="fill_parent"
     	android:layout_height="wrap_content"
     	android:background="@anim/roundcorner"
     	android:layout_margin="4dip">
		<LinearLayout 
			android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="4dip">
            <TextView 
         		android:layout_width="0dip"
	     		android:layout_height="wrap_content"
         		android:layout_weight="9"
         		android:gravity="left"
         		android:text="@string/personal"
         		android:textColor="#F7C228"
         		android:layout_gravity="left"
         		android:textSize="@dimen/profile_header"/>
         	<Button 
         		android:id="@+id/up"    
         		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
         		android:background="@drawable/up" 
         		android:layout_gravity="right"
         		android:visibility="gone" 
         		android:layout_marginRight="5dip"/>
         	<Button 
         		android:id="@+id/edit"    
         		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
         		android:background="@anim/location_button" 
         		android:layout_gravity="right" />
		</LinearLayout>
 		<LinearLayout 
			android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="0dip">
         	<TextView 
         		android:layout_width="0dip"
	     		android:layout_height="fill_parent"
         		android:layout_weight="1"
         		android:gravity="left"
        	 	android:text="@string/full_name"
         		android:textColor="@android:color/darker_gray"
         		android:textSize="@dimen/profile_detail"
         		android:layout_marginLeft="8dip"/>
         	<TextView 
         		android:id="@+id/fullname"    
         		android:layout_width="0dip"
	     		android:layout_height="wrap_content"
         		android:layout_weight="1"
         		android:gravity="right"
         		android:textSize="@dimen/profile_detail"
         		android:textColor="@android:color/white"
         		android:layout_marginRight="8dip"/>    
         	<TextView 
         		android:id="@+id/fullname_e"     
         		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"
	     		android:singleLine="true"   
	     		android:gravity="right"
	     		android:textSize="@dimen/profile_detail"
         		android:textColor="@android:color/white" 
         		android:background="@anim/edit_box"
         		android:visibility="gone"  
         		android:layout_marginRight="8dip"
         		android:maxLength="45"/>
		</LinearLayout>
		<LinearLayout 
			android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="0dip">
         	<TextView 
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="left"
	         	android:text="@string/id_number"
	         	android:textColor="@android:color/darker_gray"
	         	android:textSize="@dimen/profile_detail"
	         	android:layout_marginLeft="8dip"/>
         	<TextView 
         		android:id="@+id/idnumber"    
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="right"
	         	android:textSize="@dimen/profile_detail"
	        	android:textColor="@android:color/white"
	         	android:layout_marginRight="8dip"/>
         	<EditText 
	         	android:id="@+id/idnumber_e"     
	         	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"   
		     	android:gravity="right"
		     	android:textSize="@dimen/profile_detail"
	         	android:textColor="@android:color/black" 
	         	android:background="@anim/edit_box"
	         	android:visibility="gone" 
	         	android:hint="@string/id_number"   
	         	android:layout_marginRight="8dip"
	         	android:singleLine="true"/>
		</LinearLayout>
      	<LinearLayout 
			android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="0dip">
         	<TextView 
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="left"
	         	android:text="@string/phone"
	         	android:textColor="@android:color/darker_gray"
	         	android:textSize="@dimen/profile_detail"
	         	android:layout_marginLeft="8dip"/>
         	<TextView
	         	android:id="@+id/phone"     
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="right"
	         	android:textSize="@dimen/profile_detail"
	         	android:textColor="@android:color/white"
	         	android:layout_marginRight="8dip"/> 
         	<EditText 
         		android:id="@+id/phone_e"     
	         	android:layout_width="wrap_content"
		     	android:layout_height="wrap_content"   
		     	android:gravity="right"
		    	android:textSize="@dimen/profile_detail"
	         	android:textColor="@android:color/black" 
	         	android:background="@anim/edit_box"
	         	android:visibility="gone"    
	         	android:hint="@string/phone"
	         	android:layout_marginRight="8dip"
	         	android:maxLength="20"
	         	android:singleLine="true"/>
		</LinearLayout>
        <LinearLayout 
	     	android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="0dip">
         	<TextView 
         		android:layout_width="0dip"
	     		android:layout_height="wrap_content"
         		android:layout_weight="1"
         		android:gravity="left"
         		android:text="@string/email"
         		android:textColor="@android:color/darker_gray"
         		android:textSize="@dimen/profile_detail"
         		android:layout_marginLeft="8dip"/>
         	<TextView 
	         	android:id="@+id/email"    
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="right"
	         	android:textColor="@android:color/white"
	         	android:textSize="@dimen/profile_detail"
	         	android:layout_marginRight="8dip"/>
         	<EditText 
         		android:id="@+id/email_e"     
         		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"   
	     		android:gravity="right"
	     		android:textSize="@dimen/profile_detail"
         		android:textColor="@android:color/black" 
         		android:background="@anim/edit_box"
         		android:visibility="gone"    
         		android:hint="@string/email"
         		android:layout_marginRight="8dip"
         		android:maxLength="45"
         		android:singleLine="true"/>
		</LinearLayout>
       	<LinearLayout 
	 		android:orientation="horizontal"
	     	android:layout_width="fill_parent"
	     	android:layout_height="wrap_content"
	     	android:layout_margin="0dip">
         	<TextView 
	         	android:layout_width="0dip"
		     	android:layout_height="wrap_content"
	         	android:layout_weight="1"
	         	android:gravity="left"
	         	android:text="@string/password"
	         	android:textColor="@android:color/darker_gray"
	         	android:textSize="@dimen/profile_detail"
	         	android:layout_marginLeft="8dip"/>
         	<TextView
         		android:id="@+id/password"     
         		android:layout_width="0dip"
	     		android:layout_height="wrap_content"
         		android:layout_weight="1"
         		android:gravity="right"
         		android:textColor="@android:color/white"
         		android:textSize="@dimen/profile_detail"
         		android:layout_marginRight="8dip"/>
         	<EditText 
         		android:id="@+id/password_e"     
         		android:layout_width="wrap_content"
	     		android:layout_height="wrap_content"   
	     		android:gravity="right"
	     		android:textSize="@dimen/profile_detail"
         		android:textColor="@android:color/white" 
         		android:background="@anim/edit_box"
         		android:visibility="gone"    
         		android:hint="@string/password"
         		android:layout_marginRight="8dip"
         		android:maxLength="25"
         		android:singleLine="true"/>
		</LinearLayout>
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="0dip">
			<TextView 
				android:id="@+id/re_e"
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="left"
				android:text="@string/re_enter_password"
				android:textColor="@android:color/darker_gray"
				android:textSize="@dimen/profile_detail"
				android:layout_marginLeft="8dip"
				android:visibility="gone"/>
			<TextView
				android:id="@+id/visible"     
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:textColor="@android:color/white"
				android:textSize="@dimen/profile_detail"
				android:layout_marginRight="8dip"
				android:text=""/>
			<EditText 
				android:id="@+id/re_password"     
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"   
				android:gravity="right"
				android:textSize="@dimen/profile_detail"
				android:textColor="@android:color/white" 
												        android:background="@anim/edit_box"
												        android:visibility="gone"    
												        android:hint="@string/password"
												        android:layout_marginRight="8dip"
												        android:maxLength="30"
												        android:singleLine="true"
												        /> 
												         </LinearLayout>
         
          <LinearLayout 
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="2dip"
	     >
		<LinearLayout android:layout_width="0dip"
	     android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="horizontal">
         	<TextView 
	         android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
	         android:gravity="left"
	         android:text="@string/language"
	         android:textColor="@android:color/darker_gray"
	         android:textSize="@dimen/profile_detail"
	         android:layout_marginLeft="8dip"/>
         	<TextView android:id="@+id/txtLanguageChange"
	         android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
	         android:gravity="left"
	         android:text="@string/change"
	         android:textColor="@android:color/holo_blue_light"
	         android:textSize="@dimen/profile_detail"/>
         </LinearLayout>
         
         <TextView 
         android:id="@+id/language"    
         android:layout_width="0dip"
	     android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="right"
         android:textColor="@android:color/white"
         android:textSize="@dimen/profile_detail"
         android:layout_marginRight="8dip"
         />
         
         <EditText 
         android:id="@+id/language_edit"     
         android:layout_width="wrap_content"
	     android:layout_height="wrap_content"   
	     android:gravity="right"
	     android:textSize="@dimen/profile_detail"
         android:textColor="@android:color/white" 
         android:background="@anim/edit_box"
         android:visibility="gone"    
         android:hint="@string/language"
         android:layout_marginRight="8dip"
         android:maxLength="30"
         android:singleLine="true"
         />
         </LinearLayout>
         
          <LinearLayout 
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginBottom="5dip"
	     >
         <TextView 
         android:layout_width="0dip"
	     android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="left"
         android:text="@string/member_since"
         android:textColor="@android:color/darker_gray"
         android:layout_marginLeft="8dip"
         android:textSize="@dimen/profile_detail"
         />
         
         <TextView 
         android:id="@+id/time"    
         android:layout_width="0dip"
	     android:layout_height="wrap_content"
         android:layout_weight="1"
         android:gravity="right"
         android:textColor="@android:color/white"
         android:textSize="@dimen/profile_detail"
         android:layout_marginRight="8dip"
         />
         
         <EditText 
         android:id="@+id/time_e"     
         android:layout_width="wrap_content"
	     android:layout_height="wrap_content"   
	     android:gravity="right"
	     android:textSize="@dimen/profile_detail"
         android:textColor="@android:color/white" 
         android:background="@anim/edit_box"
         android:visibility="gone"    
         android:hint="@string/member_since"
         android:layout_marginRight="8dip"
         android:singleLine="true"
         />
         </LinearLayout>       
          
         
     </LinearLayout>   
   
     <LinearLayout 
     android:orientation="vertical"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:background="@anim/roundcorner"
     android:layout_margin="4dip"
     >
								         <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="4dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="9"
								         android:gravity="left"
								         android:text="@string/my_stats"
								         android:textColor="#F7C228"
								         android:layout_gravity="left"
								         android:textSize="@dimen/profile_header"
								         android:layout_marginRight="8dip"
								         />
								         
								    
								         </LinearLayout>
								         
								          <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="6"
								         android:gravity="left"
								         android:text="@string/completed_rides_request_send"
								         android:textColor="@android:color/darker_gray"	
								         android:layout_marginLeft="8dip"
                                         android:textSize="@dimen/profile_detail"							         
								         />
								         
								         <TextView 
								         android:id="@+id/request"    
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="4"
								         android:gravity="right"
								         android:textColor="@android:color/white"
								         android:textSize="@dimen/profile_detail"
								         android:layout_marginRight="8dip"
								         />
								         </LinearLayout>
								
								         
								          <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="6"
								         android:gravity="left"
								         android:text="@string/cancelled_by_driver_by_myself"
								         android:textColor="@android:color/darker_gray"
								         android:layout_marginLeft="8dip"
                                         android:textSize="@dimen/profile_detail"
								         />
								         
								         <TextView 
								         android:id="@+id/cancel"    
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="4"
								         android:gravity="right"
								         android:textColor="@android:color/white"
								         android:textSize="@dimen/profile_detail"
								         android:layout_marginRight="8dip"
								         />
								         </LinearLayout>
								         
								         <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="6"
								         android:gravity="left"
								         android:text="@string/overall_score"
								         android:textColor="@android:color/white"
								         android:layout_marginLeft="8dip"
                                         android:textSize="@dimen/profile_detail"
								         />
					         								         							         
								         <TextView
								         android:id="@+id/overall1"     
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="4"
								         android:gravity="right"
								         android:textColor="@android:color/white"
								         android:textSize="@dimen/profile_detail"
								         android:layout_marginRight="8dip"
								         />
								         </LinearLayout>
								         
		
	    <LinearLayout 
	     android:orientation="vertical"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="5dip"
	     />									         
								         <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="6"
								         android:gravity="left"
								         android:text="@string/average_rating_given"
								         android:textColor="@android:color/darker_gray"
								         android:layout_marginLeft="8dip"
                                         android:textSize="@dimen/profile_detail"
								         />
								         
								         <TextView 
								         android:id="@+id/rating"    
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="4"
								         android:gravity="right"
								         android:textColor="@android:color/white"
								         android:textSize="@dimen/profile_detail"
								         android:layout_marginRight="8dip"
								         />
								         </LinearLayout>
								         
								          <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="7"
								         android:gravity="left"
								         android:singleLine="true"
								         android:text="@string/good_customer_blocked_by_driver"
								         android:textColor="@android:color/darker_gray"
								         android:layout_marginLeft="8dip"
                                         android:textSize="@dimen/profile_detail"
								         />
								         
								         <TextView
								         android:id="@+id/block"     
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="3"
								         android:gravity="right"
								         android:textColor="@android:color/white"
								         android:textSize="@dimen/profile_detail"
								         android:layout_marginRight="8dip"
								         />
								         </LinearLayout>
								         
								          <LinearLayout 
									     android:orientation="horizontal"
									     android:layout_width="fill_parent"
									     android:layout_height="wrap_content"
									     android:layout_margin="0dip"
									     >
								         <TextView 
								         android:layout_width="0dip"
									     android:layout_height="wrap_content"
								         android:layout_weight="6"
