<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.libreteam.driver"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
	<LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
   	 	android:background="@anim/roundcorner"
    	android:layout_marginTop="2dp"
    	android:layout_marginBottom="5dp"
    	android:layout_marginLeft="3dp"
    	android:layout_marginRight="3dp"
    	android:weightSum="3">
    	<LinearLayout 
        	android:id="@+id/top"
    		android:layout_width="fill_parent"
    		android:layout_height="0dip"
    		android:orientation="horizontal"
    		android:layout_weight="2">
    		<LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_marginTop="10dip"
			    android:layout_marginLeft="5dip"
			    android:background="@anim/roundcorner_y"
			    android:layout_weight="1">
    			<ImageView
			        android:id="@+id/icon"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:padding="3dip"
			        android:scaleType="fitXY"/>
 			</LinearLayout>  
 			<LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:background="@anim/roundcorner"
			    android:layout_weight="2"
			    android:layout_marginTop="10dp"
			    android:layout_marginBottom="10dp"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp">
  				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_weight="2">
 					<com.libreteam.driver.extra.FontFitTextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textStyle="bold"
				        android:textColor="@android:color/darker_gray"
				        android:text="@string/rating"
				        android:layout_marginRight="5dip"/>
  					<TextView 
				        android:id="@+id/rating"
				        android:layout_width="wrap_content"
				        android:layout_height="fill_parent"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textStyle="bold"
				        android:layout_marginRight="5dip"
				        android:textColor="@android:color/white"/>
   					<TextView 
				        android:id="@+id/top1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="#D7AA24"
				        android:textStyle="bold"/>
     			</LinearLayout>
    			<LinearLayout 
					android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_weight="3">
        			<ImageView
				        android:id="@+id/star"
				        android:layout_width="0dip"
				        android:layout_height="match_parent"
				        android:layout_weight="3"
				        android:layout_marginTop="0dip"
				        android:scaleType="fitXY"/>
        			<com.libreteam.driver.extra.FontFitTextView
				        android:id="@+id/starnum"
				        android:layout_width="0dip"
				        android:layout_height="wrap_content"
				        android:gravity="right"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textStyle="bold"
				        android:layout_weight="1"
				        android:textColor="@android:color/white"/>  
    			</LinearLayout>
   				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_weight="2">
   					<com.libreteam.driver.extra.FontFitTextView 
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textStyle="bold"
				        android:text="@string/response"
				        android:layout_marginRight="5dip"
				        android:textColor="@android:color/darker_gray"/>
  					<TextView 
				        android:id="@+id/response"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="@android:color/white"
				        android:textStyle="bold"
				        android:layout_marginRight="5dip" />
   					<TextView 
				        android:id="@+id/top2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:gravity="left"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="#D7AA24"
				        android:textStyle="bold"/>
    			</LinearLayout>
     			<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:layout_weight="3">
      				<com.libreteam.driver.extra.ProgressBarView
			    		android:id="@+id/bar3"
			          	custom:bar_initial_value="0"
			          	custom:bar_num_divisions="100"
			          	custom:bar_spacing="0dp"
			          	custom:bar_orientation="0"
			          	custom:bar_color1="@color/bar_green"
			          	custom:bar_color2="@color/bar_off"
			          	android:background="@color/background_black"
			          	android:layout_width="0dip"
			          	android:layout_height="match_parent"
			          	android:layout_weight="3"
			          	android:layout_marginTop="5dip"/>
			        <com.libreteam.driver.extra.FontFitTextView
				        android:id="@+id/responsenum"
				        android:layout_width="0dip"
				        android:layout_height="wrap_content"
				        android:gravity="right"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textStyle="bold"
				        android:layout_weight="1"
				        android:textColor="@android:color/white"/>
    			</LinearLayout>
  			</LinearLayout>
 			<LinearLayout
			    android:layout_width="0dip"
			    android:layout_height="fill_parent"
			    android:orientation="vertical"
			    android:background="@anim/roundcorner_y"
			    android:layout_marginTop="10dip"
			    android:layout_marginRight="5dip"
			    android:layout_weight="1"
			    android:gravity="center">
  				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="0dp"
				    android:layout_weight="1">
      				<com.libreteam.driver.extra.FontFitTextView
				        android:id="@+id/time"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="@android:color/white"
				        android:textStyle="bold"
				        android:layout_margin="0dip"
				        android:gravity="center"/>
     			</LinearLayout>
  				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="0dp"
				    android:orientation="vertical"
				    android:layout_margin="3dip"
				    android:background="@anim/roundcorner"
				    android:gravity="center"
				    android:layout_weight="2">    
      				<com.libreteam.driver.extra.FontFitTextView
				        android:layout_width="match_parent"
				        android:layout_height="0dip"
				        android:gravity="center"
				        android:singleLine="true"
				        android:ellipsize="marquee"
				        android:textColor="@android:color/darker_gray"
				        android:textStyle="bold"
				        android:text="@string/estimated"
				        android:layout_weight="1"/>
     				<com.libreteam.driver.extra.FontFitTextView
				        android:id="@+id/price"
				        android:layout_width="match_parent"
				        android:layout_height="0dip"
				        android:gravity="center"
				        android:singleLine="true"
				        android:ellipsize="end"
				        android:textColor="@android:color/white"
				        android:textStyle="bold"
				        android:paddingBottom="0dip"
				        android:layout_weight="1"/>
    			</LinearLayout>
     		</LinearLayout>
   		</LinearLayout>
   		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="0dip"
		    android:orientation="horizontal"
		    android:paddingTop="15dip"
		    android:paddingBottom="10dip"
		    android:id="@+id/detail"
		    android:layout_weight="1">
		    <RelativeLayout
			    android:layout_width="0dip"
			    android:layout_height="match_parent"
			    android:layout_gravity="center"
			    android:layout_weight="1">
			    <TextView
			        android:id="@+id/driver"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:lines="1"
			        android:textColor="@android:color/white"
			        android:layout_centerInParent="true"
			        android:textStyle="bold"/>
    		</RelativeLayout>
 			<RelativeLayout
			    android:layout_width="0dip"
			    android:layout_height="match_parent"
			    android:layout_gravity="center"
			    android:layout_weight="2">
			    <com.libreteam.driver.extra.FontFitTextView
					android:id="@+id/vehicle"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:textColor="@android:color/white"
			        android:layout_centerInParent="true"
			        android:textStyle="bold"/>
			</RelativeLayout>
        	<RelativeLayout
			    android:layout_width="0dip"
			    android:layout_height="match_parent"
			    android:layout_gravity="center"
			    android:layout_weight="1">
			    <com.libreteam.driver.extra.FontFitTextView
			        android:id="@+id/heart"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:singleLine="true"
			        android:ellipsize="end"
			        android:lines="1"
			        android:layout_centerInParent="true"
			        android:textColor="@android:color/white"
			        android:textStyle="bold"/>
    		</RelativeLayout>
   		</LinearLayout>
	</LinearLayout>
</LinearLayout>