<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libreteam.driver.Driver_RideOffer"
    android:orientation="vertical"
    tools:ignore="MergeRootFrame"
    android:background="#191617"
    >
    
<LinearLayout
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_header"
    android:orientation="horizontal" >
   
		<LinearLayout
		    android:id="@+id/logosection"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:paddingLeft="0dp" >

			<ImageView
			    android:id="@+id/logo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:contentDescription="@string/app_name"
			    android:layout_gravity="center_vertical"
			    android:background="@drawable/logo_taxi_s" />

		</LinearLayout>
      
                                       <LinearLayout 
								        android:id="@+id/border"
								        android:orientation="horizontal"
								        android:layout_width="wrap_content"
								        android:layout_height="wrap_content"
								        android:gravity="center"
								        android:layout_gravity="center"
								        android:background="@android:color/transparent"
								        >                                   
                                                                         
										   <TextView 
										        android:id="@+id/status"
												android:layout_width="wrap_content"
												android:layout_height="fill_parent"
												android:textSize="@dimen/status"
												android:textColor="#191617"
												android:text="@string/ride_offer"
												android:gravity="center"
												android:layout_gravity="center"
												android:layout_marginRight="4dip"/>

									   </LinearLayout>
  		<LinearLayout
  		    android:id="@+id/thirdsection"
  		    android:layout_width="wrap_content"
  		    android:layout_height="wrap_content"
  		    android:layout_gravity="top"
  		    android:gravity="right" >

  			<ImageView
  			    android:id="@+id/thirdimg"
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_gravity="center_vertical|right"
  			    android:src="@drawable/thirdsection" />

  		</LinearLayout>									   
                         </LinearLayout>
   
 <LinearLayout 
  android:id="@+id/body"
  android:orientation="vertical"
  android:layout_width="fill_parent"  
  android:layout_height="0dip" 
  android:layout_weight="2"
  android:background="#191617"
  >
          
   <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:orientation="vertical"
    android:layout_margin="0dip"
    android:layout_weight="4"
    >
       
    <TextView 
    android:id="@+id/address"
	android:layout_width="wrap_content"
	android:layout_height="fill_parent"
	android:textColor="@android:color/darker_gray"
	android:gravity="center"
	android:singleLine="true"

	android:layout_margin="5dip"
	android:layout_gravity="right"
	android:textSize="@dimen/profile_header_s"

    /> 

    </LinearLayout> 
    
    <View
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:background="@android:color/darker_gray" 
      android:layout_marginTop="5dip"
      android:layout_marginRight="5dip"
      android:layout_marginLeft="5dip"
      /> 
    
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:orientation="horizontal"
    android:layout_margin="0dip"
    android:layout_weight="6"
     >

    <LinearLayout
    android:layout_width="0dip"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
    android:layout_weight="3.5"
    android:gravity="left"
    android:layout_gravity="center_vertical"
    >
     
    <TextView 
    android:id="@+id/distance"    
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textSize="@dimen/detail_header"
	android:textColor="@android:color/darker_gray"
	android:gravity="bottom"
	android:layout_marginLeft="2dip"
	android:text="@string/distance"
    />     
        
<!--     <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="2dip"
    > -->
     
    <TextView
    android:id="@+id/meter" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:textSize="@dimen/profile_header_s"
	android:gravity="center"
	android:singleLine="true"
	android:textStyle="bold"
	android:textColor="@android:color/black"
	android:layout_marginLeft="2dip"
	android:background="@anim/roundcorner_y"
	android:layout_gravity="center_vertical"
    /> 
        
<!--      </LinearLayout> 
 -->    </LinearLayout>
     
    <View
    android:layout_width="1dip"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray" 
    android:layout_margin="5dip"
    /> 
    
    <LinearLayout
    android:layout_width="0dip"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_weight="3.5"
    android:layout_margin="0dip"
    android:layout_marginTop="5dip"
    android:gravity="center"
    android:layout_gravity="center_vertical"
    >
      
    <TextView 
    android:id="@+id/cus"    
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:textSize="@dimen/detail_header"
	android:textColor="@android:color/darker_gray"
	android:gravity="center"
	android:layout_margin="0dip"
	android:text="@string/customer"
    />     
        
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="0dip"
    >
    <TextView 
    android:id="@+id/no1"    
	android:layout_width="0dip"
	android:layout_height="wrap_content"
	android:textSize="@dimen/profile_header_s"
	android:gravity="right"
	android:singleLine="true"
	android:textStyle="bold"
	android:textColor="@android:color/holo_green_dark"
	android:layout_margin="0dip"
	android:layout_weight="1"
	android:text="14"
	android:layout_gravity="center_vertical"
    /> 
     
      <View
      android:layout_width="1dip"
      android:layout_height="fill_parent"
      android:background="@android:color/darker_gray" 
      android:layout_marginLeft="6dip"
      android:layout_marginRight="6dip"
      android:layout_marginTop="5dip"
      android:layout_marginBottom="5dip"
      android:layout_gravity="center_vertical"
      /> 
    
    <TextView 
    android:id="@+id/no2"    
	android:layout_width="0dip"
	android:layout_height="wrap_content"
	android:textSize="@dimen/profile_header_s"
	android:gravity="left"
	android:singleLine="true"
	android:textStyle="bold"
	android:textColor="@android:color/holo_red_light"
	android:layout_margin="0dip"
	android:layout_weight="1"
	android:text="1"
	android:layout_gravity="center_vertical"
    /> 
    
     </LinearLayout>
        
    </LinearLayout>
    <View
      android:layout_width="1dip"
      android:layout_height="fill_parent"
      android:background="@android:color/darker_gray" 
      android:layout_marginLeft="5dip"
      android:layout_marginTop="5dip"
      android:layout_marginBottom="5dip"
      android:layout_marginRight="0dip"
      /> 
    
    <LinearLayout
    android:layout_width="0dip"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_margin="0dip"
    android:layout_weight="3"
    android:gravity="center"
     >
    
    <TextView 
    android:id="@+id/countdown"    
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:textSize="@dimen/count_down"
	android:singleLine="true"
	android:textColor="@android:color/white"
	android:layout_margin="0dip"
	android:gravity="center"
	android:text="20"
    />  
        
    </LinearLayout>
    </LinearLayout>
    
</LinearLayout>
      
      <RelativeLayout
       android:id="@+id/contain"
       android:layout_width="fill_parent"  
       android:layout_height="0dip" 
       android:layout_weight="6"    
      >
      
      <FrameLayout 
       android:id="@+id/map"
       android:layout_width="fill_parent"  
       android:layout_height="fill_parent" 
       />

 <!--    <fragment 
    android:id="@+id/offer_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    class="com.google.android.gms.maps.SupportMapFragment"
    /> -->

      </RelativeLayout>    
     
     <LinearLayout 
       android:id="@+id/bottom"
       android:orientation="horizontal"
       android:layout_width="fill_parent"  
       android:layout_height="0dip" 
       android:layout_weight="1"
       >

              <Button 
       android:id="@+id/reject"    
       android:layout_width="0dip"  
       android:layout_height="fill_parent" 
       android:layout_weight="3"
       android:layout_marginTop="7dip" 
       android:layout_marginBottom="7dip"
       android:layout_marginLeft="7dip"
       android:layout_marginRight="3dip"
       android:background="@drawable/gray_button"
       android:text="@string/reject"
       android:textColor="@android:color/darker_gray"
       android:textSize="@dimen/profile_header_s"
           />
                
        <Button 
       android:id="@+id/accept"     
       android:layout_width="0dip"  
       android:layout_height="fill_parent" 
       android:layout_weight="7" 
       android:layout_marginTop="7dip" 
       android:layout_marginBottom="7dip"
       android:layout_marginLeft="3dip"
       android:layout_marginRight="7dip"
       android:background="@drawable/green_button" 
       android:text="@string/accept" 
       android:textSize="@dimen/profile_header_s"
           />     
      </LinearLayout>
      
    </LinearLayout>
