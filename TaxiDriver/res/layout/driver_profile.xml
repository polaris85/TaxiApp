         <LinearLayout 
	     android:orientation="horizontal"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="2dip"
	     >
         <TextView 
         android:layout_width="0dip"
	     android:layout_height="wrap_content"
         android:layout_weight="1"
